@model Coban.Market.Web.Models.OrderModels.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}

<style>


    .field-validation-error {
        color: #f00;
    }

    .field-validation-valid {
        display: none;
    }

    .input-validation-error {
        border: 1px solid #f00;
        background-color: #fee;
    }

    .validation-summary-errors {
        font-weight: bold;
        color: #f00;
    }

    .validation-summary-valid {
        display: none;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mt-3">Sipariş Bilgileriniz</h2>
            <p>Lütfen sipariş bilgilerinizi doldurunuz.</p>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()

                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                    <div class="col-sm-6">
                        <span class="badge-danger">
                            @User.Identity.Name
                        </span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Adres Tanımı</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.AddressTitle, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Adres</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Şehir</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Semt</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.District, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Mahalle</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Neighborhood, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Posta Kodu</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.PostCode, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary">Siparişi Onayla</button>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
