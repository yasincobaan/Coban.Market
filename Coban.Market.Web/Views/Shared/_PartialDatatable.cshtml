@using Coban.Market.Language

@Styles.Render("~/datatable/css")
<style>
    .role:hover {
        cursor: pointer;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-success text-center">
                    @ViewBag.Title
                </h6>
                <a href="@Url.Action("Create")" id="btnSave" class="btn btn-success btn-sm float-right">
                    <i class="fa fa-plus"></i>
                    @Language.NewRecord
                </a>
            </div>
            <div class="card-body">
                <div id="errorDiv">
                    <p id="errorP"></p>
                </div>
                <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr></tr>
                    </thead>
                </table>


            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/datatable/js")


