                        </li>
                    }
                }*@
            </ul>
        </nav>
    </div>
    <div class="offcanvas-container" id="mobile-menu">
        <a class="account-link" href="#">
            <div class="user-ava">
                <!-- Profil Fotosu -->
                @if (CurrentSession.User == null)
                {
                    <img src="~/ContentAdmin/Images/user.png" alt="Username">
                }
                else
                {
                    <img src="~/Images/MarketUser/@CurrentSession.User.ProfileImageFilename" alt="@CurrentSession.User.Username">
                }

            </div>
            <div class="user-info">
                <h6 class="user-name">
                    @if (CurrentSession.User == null)
                    {
                        <b>Username</b>
                    }
                    else
                    {
                        <b>@CurrentSession.User.Name</b>
                        <b>@CurrentSession.User.Surname</b>
                    }

                </h6>
                @*<span class="text-sm text-white opacity-60">530 Reward Points</span>*@
            </div>
        </a>
        <nav class="offcanvas-menu">
            <ul class="menu">
                <li class="has-children active">
                    <span>
                        <a href="@Url.Action("ShopCategory", "Home")">
                            All Categories
                        </a>
                    </span>
                </li>
                @*@foreach (var item in categories)
                {
                    if (item.Categories != null && item.Id != 1)
                    {
                        <li class="has-children">
                            <span>
                                <a href="@Url.Action("ShopCategory", "Home", new {id = item.Id})">
                                    @item.Title
                                </a>
                                <span class="sub-menu-toggle"></span>
                            </span>
                            <ul class="offcanvas-submenu">
                                @foreach (var subcategories in item.Categories)
                                {
                                    <li>
                                        <a href="@Url.Action("ShopCategory", "Home", new {id = subcategories.Id})">
                                            @subcategories.Title
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                }*@
            </ul>
        </nav>
    </div>
    <div class="topbar">
        <div class="topbar-column">
            <a class="hidden-md-down" href="#"><i class="fa fa-phone"></i>&nbsp;+90 542 531 4977</a>
            <a class="hidden-md-down" href="#"><i class="fa fa-envelope-o"></i>&nbsp;yasincobaan@gmail.com</a>
            <a class="hidden-md-down" href="#"><i class="fa fa-map-marker"></i>Ankara, TR</a>
        </div>
        <div class="topbar-column">
            <div class="lang-currency-switcher-wrap">
                <div class="lang-currency-switcher dropdown-toggle">
                    <span class="currency">₺ TRY</span>
                </div>
                <div class="dropdown-menu">
                    <div class="currency-select text-center">
                        <a href="#" data-price="TRY">₺ TRY</a><br />
                        <a href="#" data-price="usd">$ USD</a><br />
                        <a href="#" data-price="eur">€ EUR</a><br />
                        <a href="#" data-price="ukp">£ UKP</a><br />
                        <a href="#" data-price="jpy">¥ JPY</a>
                    </div>
                </div>
            </div>
            <a class="social-button sb-facebook shape-none sb-dark soc-border" href="https://www.facebook.com/yasiincobaan" target="_blank"><i class="socicon-facebook"></i></a>
            <a class="social-button sb-instagram shape-none sb-dark" href="https://www.instagram.com/yasiincoban/" target="_blank"><i class="socicon-instagram"></i></a>
        </div>
    </div>
    <header class="navbar navbar-sticky">
        <div class="site-search">
            @using (Html.BeginForm("Search", "Home", FormMethod.Post))
            {
                <input type="text" name="site_search" placeholder="Type to search...">
                <div class="search-tools">
                    <span class="clear-search">Clear</span>
                    <span class="close-search"><i class="icon-cross"></i></span>
                </div>
            }
        </div>


        <div class="site-branding">
            <div class="inner">
                <a class="offcanvas-toggle cats-toggle" href="#shop-categories" data-toggle="offcanvas"></a>
                <a class="offcanvas-toggle menu-toggle" href="#mobile-menu" data-toggle="offcanvas"></a>
                <a class="site-logo" href="@Url.Action("Index","Home")"><img style="width: 50px;" src="~/ContentAdmin/Images/logo.png" alt="Inspina"></a>
      
            </div>
        </div>


        <nav class="site-menu">
            <ul>
                <li class="active">
                    <a href="#"><span>Shop</span></a>
                    <ul class="sub-menu">
                        <li class="has-children">
                            <a href="#"><span>Shop Categories</span></a>
                            <ul class="sub-menu">
                                <li><a href="shop-categories-1.html">Categories Left Sidebar</a></li>
                                <li><a href="shop-categories-2.html">Categories Right Sidebar</a></li>
                                <li><a href="shop-categories-3.html">Categories No Sidebar</a></li>
                            </ul>
                        </li>
                        <li><a href="cart.html">Shopping Cart</a></li>
                    </ul>
                </li>

            </ul>
        </nav>

        <div class="toolbar">
            <div class="inner">
                <div class="tools">
                    <div class="search"><i class="icon-search"></i></div>

                    <div class="account">
                        <a href="#"></a><i class="icon-head"></i>
                        <ul class="toolbar-dropdown">
                            <li class="sub-menu-user">
                                <div class="user-ava">
                                    @if (CurrentSession.User != null)
                                    {
                                        <img src="~/Images/MarketUser/@CurrentSession.User.ProfileImageFilename" alt="@CurrentSession.User.Username">

                                    }
                                    else
                                    {
                                        <img src="~/ContentAdmin/Images/user.png" alt="Username">

                                    }
                                </div>
                                <div class="user-info">
                                    <h6 class="user-name">
                                        @if (CurrentSession.User != null)
                                        {
                                            <b>@CurrentSession.User.Username</b>
                                        }
                                        else
                                        {
                                            <b>Username</b>

                                        }
                                    </h6>
                                    @*<span class="text-xs text-muted">530 Reward Points</span>*@
                                </div>
                            </li>
                            <li><a href="@Url.Action("ShowProfile","Profile")">My Profile</a></li>
                            <li><a href="@Url.Action("Orders","Order")">My Orders</a></li>
                            <li><a href="@Url.Action("Wishlist","Profile")">My Wishlist</a></li>
                            <li class="sub-menu-separator"></li>
                            <li><a href="@Url.Action("Logout","Account")"><i class="fa fa-lock"></i> Sign Out</a></li>
                        </ul>
                    </div>

                    <div class="cart">
                        <a href="#"></a>
                        <i class="icon-bag"></i>
                        <span class="count">3</span>
                        <span class="subtotal">$1000</span>
                        <div class="toolbar-dropdown">


                            <div class="dropdown-product-item">
                                <span class="dropdown-product-remove"><i class="icon-cross"></i></span>
                                <a class="dropdown-product-thumb" href="#">
                                    <img src="~/ContentCustomer/Theme/images/cart-dropdown/01.jpg" alt="Product">
                                </a>
                                <div class="dropdown-product-info">
                                    <a class="dropdown-product-title" href="#">Samsung Galaxy A8</a>
                                    <span class="dropdown-product-details">1 x $520</span>
                                </div>
                            </div>


                            <div class="toolbar-dropdown-group">
                                <div class="column">
                                    <span class="text-lg">Total:</span>
                                </div>
                                <div class="column text-right">
                                    <span class="text-lg text-medium">$1920 </span>
                                </div>
                            </div>
                            <div class="toolbar-dropdown-group">
                                <div class="column">
                                    <a class="btn btn-sm btn-block btn-secondary" href="#">View Cart</a>
                                </div>
                                <div class="column">
                                    <a class="btn btn-sm btn-block btn-success" href="#">Checkout</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </header>
    <div class="offcanvas-wrapper">
        @RenderBody()
    </div>
    <a class="scroll-to-top-btn" href="#">
        <i class="icon-arrow-up"></i>
    </a>
    <div class="site-backdrop">

    </div>
    @Scripts.Render("~/layoutCustomer/js")
    @RenderSection("scripts", false)
</body>
</html>