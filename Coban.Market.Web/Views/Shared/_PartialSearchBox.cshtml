@using Coban.Market.Language

<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <a href="#monthsearch" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="a">
                <h6 class="m-0 font-weight-bold text-success text-center">
                   @Language.Monthandyearbasedsearch
                </h6>
            </a>
            <div class="collapse show" id="monthsearch" style="">
                <div class="card-body">
                    <div class="form-group row">
                        <label class="control-label col-md-4">
                            @Language.SelectYear
                        </label>
                        <select id="year" class="form-control col-md-4">
                            @for (int i = 2019; i < 2100; i++)
                            {
                                <option>@i</option>
                            }
                        </select>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-4">
                           @Language.SelectMonth
                        </label>
                        <select id="month" class="form-control col-md-4">
                            <option value="">
                                @Language.Allof
                            </option>
                            @for (int i = 1; i < 13; i++)
                            {
                                <option>
                                    @i
                                </option>
                            }
                        </select>
                        <span class="col-md-2">
                        </span>
                        <span class="col-md-2">
                            <a href="#" class="btn btn-primary btn-icon-split mr-3">
                                <span class="icon">
                                    <i class="fas fa-search"></i>
                                </span>
                                <span class="text">
                                    @Language.Search
                                </span>
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card shadow mb-4 hei" id="hei">
            <a href="#b" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="b">
                <h6 class="m-0 font-weight-bold text-success text-center">
                    @Language.SearchforDates
                </h6>
            </a>
            <div class="collapse show" id="b" style="">
                <div class="card-body">
                    <div class="form-group row">
                        <label class="control-label col-md-4">
                            @Language.SelectedDates
                        </label>
                        <span class="col-md-4">
                            <div class="input-group">
                                <input type="text" name="daterange" value="" class="form-control" />
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>
                            </div>
                        </span>
                        <span class="col-md-2">
                        </span>
                        <span class="col-md-2">

                            <a href="#" class="btn btn-primary btn-icon-split mr-3" id="SearchDateRange">
                                <span class="icon">
                                    <i class="fas fa-search"></i>
                                </span>
                                <span class="text">
                                   @Language.Search
                                </span>
                            </a>
                        </span>
                        <input type="text" name="first" style="display:none;" id="first" />
                        <input type="text" name="last" id="last" style="display:none;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>