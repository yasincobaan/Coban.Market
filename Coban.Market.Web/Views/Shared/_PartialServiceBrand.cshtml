@using Coban.Market.Language


<section class="bg-faded padding-top-1x padding-bottom-1x">
    <div class="container">
        <h3 class="text-center mb-30">Popular Brands</h3>
        <div class="owl-carousel" data-owl-carousel='{ "nav": false, "dots": false, "loop": true, "autoplay": true, "autoplayTimeout": 4000, "responsive": {"0":{"items":2}, "470":{"items":3},"630":{"items":4},"991":{"items":5},"1200":{"items":6}} }'>
            <img class="d-block w-110 h-auto opacity-75 m-auto" src="~/Images/Brand/apple1.png" alt="Brands">
            <img class="d-block w-110 h-auto opacity-75 m-auto" src="~/Images/Brand/monster.png" alt="Brands">
            <img class="d-block w-110 h-auto opacity-75 m-auto" src="~/Images/Brand/philips1.png" alt="Brands">
            <img class="d-block w-110 h-auto opacity-75 m-auto" src="~/Images/Brand/samsungbrand.png" alt="Brands">
            <img class="d-block w-110 h-auto  opacity-75 m-auto" src="~/ContentCustomer/Theme/images/brands/05.png" alt="Brands">
            <img class="d-block w-110 h-auto opacity-75 m-auto" src="~/ContentCustomer/Theme/images/brands/06.png" alt="Brands">
            <img class="d-block w-110 h-auto opacity-75 m-auto" src="~/ContentCustomer/Theme/images/brands/07.png" alt="Brands">
        </div>
    </div>
</section>

<section class="container padding-top-1x padding-bottom-1x">
    <div class="row">
        <div class="col-md-3 col-sm-6 text-center home-cat">
            <img class="d-block w-90 img-thumbnail rounded-circle mx-auto mb-3" src="~/ContentCustomer/Theme/images/services/01.png" alt="@Language.FreeShipping">
            <h6>@Language.FreeShipping</h6>
            <p class="text-muted margin-bottom-none">
                @Language.Over100
            </p>
        </div>
        <div class="col-md-3 col-sm-6 text-center home-cat">
            <img class="d-block w-90 img-thumbnail rounded-circle mx-auto mb-3" src="~/ContentCustomer/Theme/images/services/02.png" alt="@Language.MoneyBack">
            <h6>
                @Language.MoneyBack
            </h6>
            <p class="text-muted margin-bottom-none">
                @Language.Moneybackguarantee
            </p>
        </div>
        <div class="col-md-3 col-sm-6 text-center home-cat">
            <img class="d-block w-90 img-thumbnail rounded-circle mx-auto mb-3" src="~/ContentCustomer/Theme/images/services/03.png" alt="@Language.Support">
            <h6>
                24/7 @Language.Support
            </h6>
            <p class="text-muted margin-bottom-none">
                @Language.OnlineConsultations
            </p>
        </div>
        <div class="col-md-3 col-sm-6 text-center home-cat">
            <img class="d-block w-90 img-thumbnail rounded-circle mx-auto mb-3" src="~/ContentCustomer/Theme/images/services/04.png" alt="@Language.SecurePayment">
            <h6>
                @Language.SecurePayment
            </h6>
            <p class="text-muted margin-bottom-none">
                @Language.SafeShoppingGuarantee
            </p>
        </div>
    </div>
</section>

