@using Coban.Market.Entities
@using Coban.Market.Language
@using Coban.Market.Web.Models
@{
    List<Product> list = CacheHelper.GetProductsFromCache();
}
<section class="container padding-top-3x padding-bottom-3x">
    <h3 class="text-center mb-30">
        @Language.FeaturedProducts
    </h3>
    <div class="isotope-grid cols-4">
        <div class="gutter-sizer"></div>
        <div class="grid-sizer"></div>
        @foreach (var item in list)
        {
            <div class="grid-item">
                <div class="product-card">
                    <a class="product-thumb" href="@Url.Action("SingleProduct","Home",new{id=item.Id})">
                        <img src="~/Images/Product/@item.Image1" alt="@item.ProductBrand">
                    </a>
                    <h3 class="product-title">
                        <a href="@Url.Action("SingleProduct", "Home", new {id = item.Id})">
                            @item.ProductName
                        </a>
                    </h3>
                    <h4 class="product-price"><del>@item.Price.ToString("C2")</del>@item.DiscountedPrice.Value.ToString("C2")</h4>
                    <div class="product-buttons">
                        <button class="btn btn-outline-secondary btn-sm btn-wishlist" data-toggle="tooltip" title="@Language.Whishlist">
                            <i class="icon-heart"></i>
                        </button>
                        <a href="@Url.Action("AddToCart","Cart",new { id=item.Id})" class="btn btn-outline-primary btn-sm">@Language.AddCart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>