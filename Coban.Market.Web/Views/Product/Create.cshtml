@using Coban.Market.Language
@model Coban.Market.Entities.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
} <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css">
<script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    @Language.CreateProduct
                </h6>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-lg-6">
                            <h3>Product Features</h3>
                            <div class="form-group row">
                                <div class="control-label col-md-4">
                                    @Language.ProductName
                                </div>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="control-label col-md-4">
                                    @Language.ProductBrand
                                </div>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.ProductBrand, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ProductBrand, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="control-label col-md-2">
                                    @Language.ProductPrice
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                </div>
                                <div class="control-label col-md-2">
                                    @Language.ProductDiscountedPrice
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.DiscountedPrice, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DiscountedPrice, "", new { @class = "text-danger" })
                                </div>
                            </div>



                            <div class="form-group row">
                                <div class="control-label col-md-4">
                                    @Language.ProductisSale
                                </div>
                                <div class="col-md-8">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.isSale)
                                        @Html.ValidationMessageFor(model => model.isSale, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>



                            <div class="form-group row">
                                <div class="control-label col-md-4">
                                    @Language.ProductisStock
                                </div>
                                <div class="col-md-2">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.IsStock)
                                        @Html.ValidationMessageFor(model => model.IsStock, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="control-label col-md-2">
                                    @Language.ProductStock
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
                                </div>


                            </div>
                            <div class="form-group row">
                                <div class="control-label col-md-4">
                                    Product Like Count
                                </div>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.LikeCount, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.LikeCount, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="control-label col-md-4">
                                    @Language.CategoryTitle
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-6">
                            <h3>Product Images</h3>
                            <div class="form-group row">
                                <div class="control-label col-md-4">
                                    @Language.ProductImage
                                </div>

                                <div class="col-md-8">
                                    <div class="input-group ">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-upload"></i></span>
                                        </div>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input Image1" id="Image1" name="Image1">
                                            <label class="custom-file-label" for="Image">Dosya Seçiniz</label>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="control-label col-md-4">
                                    @Language.ProductImage
                                </div>
                                <div class="col-md-8">
                                    <div class="input-group ">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-upload"></i></span>
                                        </div>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input Image2" id="Image2" name="Image2">
                                            <label class="custom-file-label" for="Image">Dosya Seçiniz</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="control-label col-md-4">
                                    @Language.ProductImage
                                </div>
                                <div class="col-md-8">
                                    <div class="input-group ">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-upload"></i></span>
                                        </div>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input Image3" id="Image3" name="Image3">
                                            <label class="custom-file-label" for="Image">Dosya Seçiniz</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="control-label col-md-4">
                                    @Language.ProductImage
                                </div>
                                <div class="col-md-8">
                                    <div class="input-group ">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-upload"></i></span>
                                        </div>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input Image4" id="Image4" name="Image4">
                                            <label class="custom-file-label" for="Image">Dosya Seçiniz</label>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <h3>Product Description</h3>
                        <div class="col-lg-6">
                            <div class="form-group row">
                                <div class="control-label col-md-4">
                                    @Language.ProductLittleDescription
                                </div>
                                <div class="col-md-8">
                                    @Html.TextAreaFor(model => model.LittleDescription, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.LittleDescription, "", new { @class = "text-danger" })
                                </div>
                            </div>


                        </div>
                        <div class="col-lg-6">
                            <div class="form-group row">
                                <div class="control-label col-md-4">
                                    @Language.ProductDescription
                                </div>
                                <div class="col-md-8">
                                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">

                        </div>
                        <div class="col-lg-6">
                            <div class="form-group row">
                                <div class="col-md-7">

                                </div>
                                <div class="col-md-3">
                                    <a href="@Url.Action("Index", "Product")" class="btn btn-primary float-right">
                                        <i class="fa fa-angle-double-left"></i>
                                        @Language.BackToList
                                    </a>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-success">
                                        <i class="fa fa-save"></i>
                                        @Language.Save
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>



                }
            </div>
        </div>
    </div>
</div>

